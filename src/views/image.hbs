<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{images.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{images.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body text-center">
        <img src="/public/upload/{{images.filename}}" alt="{{images.filename}}" class="img-fluid">
        <p class="mt-2">{{images.description}}</p>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{images.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <i class="fas fa-heart"></i>
            <span class="likes-count">{{images.likes}}</span>
        </p>
        <p>
            <i class="fas fa-comment"></i>
            {{comments_count comments}}
        </p>
        <p>
            <i class="fas fa-eye"></i> {{images.views}}
        </p>
        <p>
            <i class="far fa-clock"></i>
            {{timeago images.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between aling-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Post a Comments
        </button>
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{images.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Name">
                </div>
                <div class="form-group mt-2">
                    <input type="text" name="mail" class="form-control" placeholder="Mail">
                </div>
                <div class="form-group mt-2">
                    <textarea name="comment" rows="2" class="form-control" placeholder="You Comments"></textarea>
                </div>
                <div class="form-group mt-2">
                    <button type="submit" class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-2">
            {{#each comments}}
            <li class="list-group-item mt-2">
                <div class="row">
                    <a href="#" class="col text center">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" class="w-40 h-40" alt="">
                    </a>
                    <blockquote class="col">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago timestamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>